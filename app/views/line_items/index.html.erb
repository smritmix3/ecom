<h2> Your cart items </h2>
<% if @line_items.empty? %>
   <b> Your cart is empty. <%= link_to "shop now", products_path %>
   <% else %>
<table>
    <thead>
<tr>
<th>SL NO</th>
<th>Name</th>
<th>Price</th>
<th>quantity</th>
</tr>
    </thead>
<tbody>
<% count = 1 %>
<% @line_items.each do |line_item| %>
<tr>
<td><%= count %></td>
<td><%= line_item.product.name %></td>
<td><%= line_item.price %></td>
td><%= line_item.product.description %>
<td><%= line_item.quantity %></td>
<td><%= link_to line_item, method: :delete, data: {confirm: "You would want to remove this product from cart? "} do %>
<i class="glyphicon glyphicon-trash"></i>
<i class="glyphicon glyphicon-asterisk"></i>
<% end %>
</td>
</tr>
<% count +=1 %>
<% end %>
</tbody>
</table>
<b> Total : <%= @line_items.sum(:price) %>
<%= form_for Order.new do |f| %>
<%= f.submit "Checkout",class: "btn btn-lg btn-warning" %>
<% end %>
<% end %>